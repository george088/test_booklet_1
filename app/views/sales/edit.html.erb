<h5> Id #<%= @item[:id] %> </h5>

<%= form_for :goods, url: sale_path, method: :put do |f|%>
  <p>
    <%= f.label :title %> 
    <%= f.text_field :title, value: @item[:title] %>
  </p>
  <p>
    <%= f.submit 'Сохранить' %>
    <%= form_for :goods, url: sale_path, method: :delete, data: { confirm: 'Are you sure?'} do |f|%>
        <%= f.submit 'Удалить' %>
    <% end %>
  </p>
<% end %>